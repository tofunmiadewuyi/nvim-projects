{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nvim-open-project",
  "title": "Neovim Projects",
  "description": "Quickly open projects in Neovim with tmux",
  "icon": "neovim.png",
  "author": "sevena",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Open Project",
      "description": "Search and open a project in Neovim",
      "mode": "view"
    },
    {
      "name": "manage-dirs",
      "title": "Manage project directories",
      "description": "Add directories to be searched",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "tmuxPath",
      "title": "tmux Path",
      "description": "Full path to tmux binary",
      "type": "textfield",
      "required": true,
      "default": "/opt/homebrew/bin/tmux"
    },
  {
    "name": "terminal",
    "title": "Terminal",
    "description": "Terminal app to use",
    "type": "dropdown",
    "required": true,
    "default": "Ghostty",
    "data": [
      { "title": "Ghostty", "value": "Ghostty", "icon": "ghostty.jpeg" },
      { "title": "iTerm", "value": "iTerm", "icon" : "iterm2.png" },
      { "title": "Terminal", "value": "Terminal", "icon" : "terminal" },
      { "title": "Kitty", "value": "kitty", "icon" : "kitty.svg" },
      { "title": "Alacritty", "value": "Alacritty", "icon" : "alacritty.png" },
      { "title": "Warp", "value": "Warp", "icon" : "warp.png" }
    ]
  }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.10",
    "@raycast/utils": "^1.4.7"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.18.4",
    "@types/react": "^17.0.90",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
